            if(iParent.hasClass("clicked")){
                $('.clicked .submenu').hide();
                iParent.removeClass("clicked");
            }
            $(".custom_search").removeClass("active").hide();
            $(".custom_myaccount").removeClass("active").hide();
            
    		if($(".custom_login").hasClass("active")){

        });
        $(".action.showcart.topBarIcon").on('click',function(){
            $(".custom_search").removeClass("active").hide();
            $(".custom_myaccount").removeClass("active").hide();
            $(".custom_login").removeClass("active").hide();

        });

    	$(".custommyaccountb_login").on('click',function(){

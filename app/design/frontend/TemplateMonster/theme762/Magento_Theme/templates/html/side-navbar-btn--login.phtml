<script>
    require([
        'jquery',
    ], function ($) {
        $(".topIcons-container > div").on('click',function(){
            var asd = $(".nav-anchor").parent('li');
            if(asd.hasClass("clicked")){
                $('.clicked .submenu').hide();
                asd.removeClass("clicked");
            }
        });
        
    	$("#mobile-switcher-currency-trigger").on('click',function(){
